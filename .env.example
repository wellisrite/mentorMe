# Career Mirror - MentorME 2.0 Backend Environment Configuration

# Database Configuration
DATABASE_URL=postgresql://postgres:password@db:5432/career_mirror
POSTGRES_DB=career_mirror
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password

# Application Configuration
APP_HOST=0.0.0.0
APP_PORT=8000
APP_RELOAD=true
APP_DEBUG=true

# Environment
ENVIRONMENT=development

# API Configuration
API_TITLE=Career Mirror API
API_VERSION=1.0.0
API_DESCRIPTION=Intelligent CV-to-Job Description matching with explainable AI scoring

# Security (Change these in production!)
SECRET_KEY=your-secret-key-change-in-production
JWT_SECRET=your-jwt-secret-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Performance Settings
MAX_WORKERS=4
TIMEOUT_SECONDS=30
POOL_SIZE=10
MAX_OVERFLOW=20

# Feature Flags
ENABLE_CACHING=false
ENABLE_METRICS=true
ENABLE_DOCS=true

#Redis Configuration
REDIS_URL=redis://redis:6379

CORS_ORIGIN=*


